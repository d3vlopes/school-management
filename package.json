{
  "name": "school-management",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:d3vlopes/school-management.git",
  "author": "Leandro Lopes <leandro-lopes46@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsup src",
    "dev": "tsx watch src/infra/server/index.ts",
    "lint": "eslint src/**/**/*.ts --max-warnings=0",
    "start": "node ./dist/infra/server/index.js",
    "test": "vitest run --silent",
    "test:ci": "yarn test --coverage",
    "test:staged": "yarn test related src/test/useCases/**/**/**/*.test.ts src/test/controllers/**/**/**/*.test.ts",
    "test:verbose": "vitest",
    "test:unit": "vitest watch --silent",
    "prepare": "husky install",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^18.16.3",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vitest/coverage-c8": "^0.30.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "tsup": "^6.7.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.30.1"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.1.0"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint --fix",
      "yarn test:staged"
    ]
  }
}
